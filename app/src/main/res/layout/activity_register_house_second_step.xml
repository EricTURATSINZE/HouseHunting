<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterHouseSecondStep">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/house_more_images_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/house_more_images"
            android:layout_marginTop="50dp"
            android:textSize="14dp"
            android:layout_marginHorizontal="30dp"
            />

        <ImageView

            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/house_more_images"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/house_more_images_label"
            android:padding="2dp"
            android:src="@drawable/add_photo"
            android:layout_marginTop="16dp"
            />
        <TextView
            android:id="@+id/house_description_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="0dp"
            android:layout_below="@+id/house_more_images"
            android:text="@string/house_description"
            android:textSize="14dp"
            />
        <EditText
            android:id="@+id/house_description"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/login_input"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:layout_below="@id/house_description_label"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/house_landlord_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="@string/house_landlord_names"
            android:layout_marginHorizontal="30dp"
            android:layout_below="@+id/house_description"
            />
        <EditText
            android:id="@+id/house_landlord_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/login_input"
            android:ems="10"
            android:textSize="16dp"
            android:hint="200,000 Rwf"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:layout_below="@+id/house_landlord_name_label"
            />
        <TextView
            android:id="@+id/house_contact_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/house_landlord_contact"
            android:textSize="14dp"
            android:layout_marginHorizontal="30dp"
            android:layout_below="@+id/house_landlord_name"
            />
        <EditText
            android:id="@+id/house_contact"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/login_input"
            android:ems="10"
            android:hint="3"
            android:textSize="16dp"
            android:inputType="phone"
            android:paddingLeft="10dp"
            android:layout_below="@+id/house_contact_label"
            />


        <Button
            android:id="@+id/house_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/house_second_step_btn"
            android:textSize="20dp"
            android:background="@drawable/login_button"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_margin="30dp"
            android:layout_below="@id/house_contact"

            />
    </RelativeLayout>

</LinearLayout>